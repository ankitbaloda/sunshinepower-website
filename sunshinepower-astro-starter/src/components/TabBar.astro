
---
const { active = "home" } = Astro.props;
function item(href, label, icon, key){
  const cls = active === key ? "tab-active" : "";
  return `<a href="${href}" class="${cls}">${icon}<span>${label}</span></a>`;
}
const icons = {
  home: `<svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'><path d='M3 10.5 12 3l9 7.5'/><path d='M5 10v10h14V10'/></svg>`,
  grid: `<svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'><rect x='3' y='3' width='7' height='7'/><rect x='14' y='3' width='7' height='7'/><rect x='3' y='14' width='7' height='7'/><rect x='14' y='14' width='7' height='7'/></svg>`,
  info: `<svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'><circle cx='12' cy='12' r='10'/><path d='M12 8h.01'/><path d='M11 12h2v4h-2z'/></svg>`,
  contact: `<svg viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2'><path d='M22 16.92a4.92 4.92 0 0 1-5.16 1.27L14 17c-3-1-5-3-6-6l1.19-2.84A4.92 4.92 0 0 1 10.08 3H8a5 5 0 0 0-5 5c0 7.18 5.82 13 13 13a5 5 0 0 0 5-5v-2.08z'/></svg>`
}
---
<nav class="tabbar" set:html={`${item('/', 'Home', icons.home, 'home')}${item('/services', 'Services', icons.grid, 'services')}${item('/about', 'About', icons.info, 'about')}${item('/contact', 'Contact', icons.contact, 'contact')}`} />
