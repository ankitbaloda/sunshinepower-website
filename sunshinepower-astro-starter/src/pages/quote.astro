
---
import Base from '../layouts/Base.astro';
---
<Base title="Get Quote — Sunshine Power" active="quote">
  <div class="container">
    <div class="h2">Get Free Consultation</div>
    <div class="form">
      <form name="quote" method="POST" data-netlify="true" netlify-honeypot="bot-field" action="/thank-you">
        <input type="hidden" name="form-name" value="quote" />
        <p style="display:none"><label>Don’t fill this out: <input name="bot-field" /></label></p>
        <label for="qname">Name</label>
        <input id="qname" name="name" placeholder="Full name" required />
        <label for="qphone">Phone</label>
        <input id="qphone" name="phone" placeholder="10-digit number" pattern="\d{10}" required />
        <label for="village">Village / Town</label>
        <input id="village" name="village" placeholder="e.g., Paota" />
        <label for="bill">Avg Monthly Bill (₹)</label>
        <input id="bill" name="bill" placeholder="e.g., 1500" />
        <label for="units">Avg Monthly Units (kWh)</label>
        <input id="units" name="units" placeholder="e.g., 250" />
        <label for="phase">Phase</label>
        <select id="phase" name="phase">
          <option value="1ph">1φ</option>
          <option value="3ph">3φ</option>
        </select>
        <label for="roof">Roof Type</label>
        <select id="roof" name="roof">
          <option value="rcc">RCC</option>
          <option value="tin">Tin</option>
        </select>
        <label for="preferred">Preferred day/time</label>
        <input id="preferred" name="preferred" placeholder="e.g., Tomorrow 4–6 PM" />
        <label for="notes">Notes</label>
        <textarea id="notes" name="notes" rows="4" placeholder="Any other details"></textarea>
        <button class="button" type="submit">Submit</button>
        <a class="button secondary" href="https://wa.me/917725920701" style="margin-left:8px">Chat on WhatsApp</a>
      </form>
    </div>
  </div>
</Base>
